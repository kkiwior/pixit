@page "/room/{RoomId}"
@using pixit.Shared.Models

@if (RoomInfo?.Users?.Count > 0)
{
<div class="container-fluid">
    <div class="row">
        <div class="col-12 text-center roomName pt-4 pb-4 mb-4">@RoomInfo.Name</div>
        <div class="col-9 text-center">
            <div class="d-flex flex-row justify-content-center flex-wrap">

                @foreach (UserModel user in RoomInfo?.Users)
                {
                    <div style="margin-right: 12px; width: 150px; text-align: center; word-wrap: break-word;">
                        <Avatar IsHost="@(RoomInfo.HostId == user.Id)" Background="@user.Avatar.Background" Cloth="@user.Avatar.Cloth" Eye="@user.Avatar.Eye" Face="@user.Avatar.Face" Gender="@user.Avatar.Gender" Hair="@user.Avatar.Hair" Mouth="@user.Avatar.Mouth" Size="150">
                            <Controls>
                                @if (State.UserId == RoomInfo.HostId)
                                {
                                    <div class="controls">
                                        <button type="button" class="icon-kick" @onclick="@(() => KickUser(user.Id))"></button>
                                    </div>
                                }
                            </Controls>
                        </Avatar>
                        <div>@user.Name</div>
                    </div>
                }
            </div>
        </div>
        <div class="col-3 text-center p-4">
            <div class="form-group">
                <label for="slots" class="form-label">Liczba graczy: @RoomInfo.Settings.Slots</label>
                <input type="range" min="@(RoomInfo.UsersOnline > 2 ? RoomInfo.UsersOnline : 2)" max="20" class="form-range" id="slots" style="width: 100%;"  value="@RoomInfo.Settings.Slots" @oninput="@((args) => RoomInfo.Settings.Slots = Convert.ToInt16(args.Value))" @onchange="UpdateSettings" disabled="@(RoomInfo.HostId == State.UserId ? false : true)">
            </div>
            <div class="form-group mt-4">
                <label for="score" class="form-label">Liczba punktów: @RoomInfo.Settings.MaxScore</label>
                <input type="range" min="5" max="100" class="form-range" id="score" style="width: 100%;" value="@RoomInfo.Settings.MaxScore" @oninput="@((args) => RoomInfo.Settings.MaxScore = Convert.ToInt16(args.Value))" @onchange="UpdateSettings" disabled="@(RoomInfo.HostId == State.UserId ? false : true)">
            </div>
        </div>
    </div>
</div>
}